<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background"
        >

    </View>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        android:id="@+id/guiaIzquierdaForm"
        >

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"
        android:id="@+id/guiaDerechaForm"
        >

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        android:id="@+id/guia"
        >

    </androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/calendario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guia"
        >

    </ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/guiaIzquierdaForm"
        app:layout_constraintRight_toLeftOf="@id/guiaDerechaForm"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:textColorHint="@color/md_theme_onPrimaryContainer"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nombre"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/md_theme_onPrimaryContainer"
            android:background="@color/md_theme_primaryContainer"
            android:textColor="@color/md_theme_onPrimaryContainer"
            android:fontFamily="@font/maglisto"
            >

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:layout_constraintLeft_toRightOf="@id/guiaIzquierdaForm"
        app:layout_constraintRight_toLeftOf="@id/guiaDerechaForm"
        android:id="@+id/correo"
        android:textColorHint="@color/md_theme_onPrimaryContainer"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:drawableStart="@drawable/correo"
            android:drawablePadding="10dp"
            android:drawableTint="@color/md_theme_onPrimaryContainer"
            android:background="@color/md_theme_primaryContainer"
            android:textColor="@color/md_theme_onPrimaryContainer"
            android:fontFamily="@font/maglisto"
            >

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correo"
        app:layout_constraintLeft_toRightOf="@id/guiaIzquierdaForm"
        app:layout_constraintRight_toRightOf="@id/guiaDerechaForm"
        android:id="@+id/contrasena"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/md_theme_tertiary"
        android:textColorHint="@color/md_theme_onPrimaryContainer"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a"
            android:drawableStart="@drawable/baseline_key_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/md_theme_onPrimaryContainer"
            android:background="@color/md_theme_primaryContainer"
            android:textColor="@color/md_theme_onPrimaryContainer"
            android:fontFamily="@font/maglisto"
            >

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/boton_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tengo cuenta"
        app:layout_constraintTop_toBottomOf="@id/boton_entrar"
        app:layout_constraintLeft_toRightOf="@id/guiaIzquierdaForm"
        app:layout_constraintRight_toLeftOf="@id/guiaDerechaForm"
        android:layout_marginTop="10dp"
        android:textColor="@color/md_theme_inversePrimary"
        >

    </TextView>

    <Button
        android:id="@+id/boton_entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        app:layout_constraintTop_toBottomOf="@id/contrasena"
        app:layout_constraintLeft_toRightOf="@+id/guiaIzquierdaForm"
        app:layout_constraintRight_toLeftOf="@+id/guiaDerechaForm"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/md_theme_primary"
        android:fontFamily="@font/maglisto"
        >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>